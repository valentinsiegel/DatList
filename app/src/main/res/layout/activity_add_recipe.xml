<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.siegel.datlist.AddRecipeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_margin">

        <ImageView
            android:id="@+id/recipe_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/food" />

        <EditText
            android:id="@+id/recipe_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/recipe_picture"
            android:singleLine="true" />

        <EditText
            android:id="@+id/recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipe_picture"
            android:layout_marginTop="16dp"
            android:maxLines="5"
            android:minLines="3" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ingredient_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/recipe_description"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/ingredient_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredient_list"
            android:singleLine="true" />

        <Button
            android:id="@+id/add_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredient_list"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/ingredient_name"
            android:text="@string/add" />

    </RelativeLayout>

</LinearLayout>
